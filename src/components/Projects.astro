---
import { projects } from '@/data/projects';
---
<section id="projects" class="section">
  <h2 class="section-title drop-shadow-[0_0_10px_var(--accent)]">Proyectos</h2>
  <div class="grid md:grid-cols-2 gap-8 mt-8">
    {projects.map((p) => (
      <article class="card flex flex-col h-full">
        <div class="flex items-center gap-3 mb-2">
          <svg class="text-accent w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 7V6a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v1"/><rect x="3" y="7" width="18" height="13" rx="2"/></svg>
          <h3 class="text-lg font-semibold">{p.name}</h3>
        </div>
        <p class="mt-2 text-foreground/80 flex-1">{p.description}</p>
        <div class="mt-3 flex flex-wrap gap-2 text-sm text-foreground/60">
          {p.stack.map((s) => (<span class="px-2 py-1 rounded bg-gray border border-white/10">{s}</span>))}
        </div>
        <div class="mt-4 flex items-center gap-4">
          {p.github && <a class="link" href={p.github} target="_blank" rel="noreferrer"><svg class="inline w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.484 2 12.021c0 4.428 2.865 8.185 6.839 9.504.5.092.682-.217.682-.482 0-.237-.009-.868-.014-1.703-2.782.605-3.369-1.342-3.369-1.342-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.004.07 1.532 1.032 1.532 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.339-2.221-.253-4.555-1.112-4.555-4.951 0-1.093.39-1.987 1.029-2.686-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.025A9.564 9.564 0 0 1 12 6.844c.85.004 1.705.115 2.504.338 1.909-1.295 2.748-1.025 2.748-1.025.546 1.378.203 2.397.1 2.65.64.699 1.028 1.593 1.028 2.686 0 3.847-2.337 4.695-4.566 4.944.36.309.68.919.68 1.852 0 1.336-.012 2.415-.012 2.744 0 .267.18.577.688.48C19.138 20.203 22 16.447 22 12.021 22 6.484 17.523 2 12 2Z"/></svg>GitHub</a>}
          {p.demo && <a class="link" href={p.demo} target="_blank" rel="noreferrer"><svg class="inline w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M18 13v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>Demo</a>}
        </div>
      </article>
    ))}
  </div>
</section>