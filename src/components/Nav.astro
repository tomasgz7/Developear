---
const items = [
  { id: '/', label: 'Inicio' },
  { id: '/about', label: 'Empresa' },
  { id: '/services', label: 'Soluciones' },
  { id: '/why-choose', label: '¿Por Qué Elegirnos?' },
  { id: '/results', label: 'Casos de Éxito' },
  { id: '/contact', label: 'Contacto' },
];
---

<!-- Corporate Top Navigation Bar -->
<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-100 shadow-professional">
  <div class="max-w-7xl mx-auto px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo with actual Developear logo -->
      <a href="/" class="flex items-center space-x-3">
        <div class="w-8 h-8 flex items-center justify-center overflow-hidden">
          <img src="/favicon-logo.png" alt="Developear Logo" class="w-6 h-6 object-contain" />
        </div>
        <span class="text-xl font-bold text-primary font-heading">Developear</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {items.map((item) => (
          <a href={item.id}
             class="text-muted hover:text-primary transition-all duration-300 font-medium text-sm relative group px-3 py-2">
            {item.label}
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
          </a>
        ))}
      </div>

      <!-- Professional CTA Button -->
      <div class="hidden md:flex">
        <a href="/contact" class="btn-primary text-sm px-6 py-3 gradient-professional hover:scale-105 transition-all duration-300 shadow-professional">
          Consultar Ahora
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden w-10 h-10 rounded-lg bg-background border border-gray-200 flex items-center justify-center text-muted hover:bg-background-alt transition-all duration-300" data-mobile-menu-button>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="text-muted">
          <path d="M3 6h18M3 12h18M3 18h18" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <div class="md:hidden hidden bg-white border-t border-gray-200" id="mobile-menu">
    <div class="px-8 py-6 space-y-4">
      {items.map((item) => (
        <a href={item.id}
           class="block text-muted hover:text-primary transition-colors font-medium text-base py-3 border-b border-gray-100 last:border-b-0">
          {item.label}
        </a>
      ))}
      <div class="pt-4">
        <a href="/contact" class="btn-primary w-full text-center py-4 gradient-professional">
          Consultar Ahora
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Spacer for fixed header -->
<div class="h-16"></div>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('[data-mobile-menu-button]');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>