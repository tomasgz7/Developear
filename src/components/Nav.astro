---
const items = [
  { id: 'about', label: '01. Perfil Profesional' },
  { id: 'technologies', label: '02. Stack Tecnológico' },
  { id: 'experience', label: '03. Experiencia' },
  { id: 'education', label: '04. Formación' },
  { id: 'projects', label: '05. Proyectos Destacados' },
  { id: 'contact', label: '06. Contacto' },
];

---
<nav class="fixed left-0 top-0 h-screen w-80 hidden lg:flex flex-col z-50 px-12 py-10">
  <div class="flex-1 flex flex-col justify-center">
    <ul class="flex flex-col gap-8 -mt-24">
      <li class="flex items-center gap-4 mb-10">
        <span class="block w-10 h-px bg-secondary"></span>
        <a href="#" class="uppercase tracking-wide text-foreground/80 hover:text-accent font-semibold text-base transition-all">Inicio</a>
      </li>
      {items.map((it) => (
        <li key={it.id} class="flex items-center gap-4">
          <span class="block w-10 h-px bg-secondary"></span>
          <a href={`#${it.id}`} class="uppercase tracking-wide text-foreground/80 hover:text-accent font-semibold text-base transition-all">{it.label.slice(3)}</a>
        </li>
      ))}
    </ul>
  </div>
  <div class="flex gap-12 mt-auto">
    <a href="https://github.com/tomasgz7" target="_blank" rel="noreferrer" aria-label="GitHub">
      <img src="https://cdn.jsdelivr.net/npm/simple-icons@v10/icons/github.svg" class="w-7 h-7 grayscale drop-shadow-[0_0_6px_var(--accent)]" alt="GitHub" />
    </a>
    <a href="https://linkedin.com/in/tomasguzman7" target="_blank" rel="noreferrer" aria-label="LinkedIn">
      <img src="https://cdn.jsdelivr.net/npm/simple-icons@v10/icons/linkedin.svg" class="w-7 h-7 grayscale drop-shadow-[0_0_6px_var(--accent)]" alt="LinkedIn" />
    </a>
    <a href="mailto:tomasguzman.dev@gmail.com" aria-label="Email">
      <img src="https://cdn.jsdelivr.net/npm/simple-icons@v10/icons/maildotru.svg" class="w-7 h-7 grayscale drop-shadow-[0_0_6px_var(--accent)]" alt="Email" />
    </a>
  </div>
</nav>

<!-- Mobile: botón hamburguesa + drawer animado -->
<div class="lg:hidden fixed top-6 right-6 z-50">
  <details class="group">
    <summary class="list-none w-12 h-12 rounded-full bg-gray border border-white/10 grid place-items-center cursor-pointer select-none shadow-lg">
      <span class="sr-only">Open menu</span>
      <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M3 6h18M3 12h18M3 18h18"/></svg>
    </summary>
    <div class="mt-3 p-4 rounded-2xl backdrop-blur bg-[#091221] border border-white/10 shadow-xl animate-fadeUp">
      <ul class="space-y-2">
        {items.map((it) => (
          <li key={it.id}>
            <a href={`#${it.id}`} class="block py-2 px-4 rounded text-foreground/90 hover:text-accent font-mono text-base transition-all">{it.label}</a>
          </li>
        ))}
      </ul>
    </div>
  </details>
</div>